{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./dist",
    "target": "es2022",
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*", "db/**/*"],
  "exclude": ["node_modules", "dist"]
}
